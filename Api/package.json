{
  "name": "coliseum-api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm install && npx prisma generate",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push --accept-data-loss",
    "prisma:studio": "prisma studio",
    "prisma:migrate": "prisma migrate deploy",
    "healthcheck": "node -e \"fetch('http://localhost:10000/api/health').then(res => process.exit(res.status === 200 ? 0 : 1)).catch(() => process.exit(1))\""
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "helmet": "^7.0.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "prisma": "^5.7.0",
    "nodemon": "^3.0.1"
  },
  "prisma": {
    "schema": "./prisma/schema.prisma"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
